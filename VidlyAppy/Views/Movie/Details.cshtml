@model VidlyAppy.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre : @Model.genre.Name</li>
    <li>Release Date : @Model.ReleasedDate.DayOfWeek.ToString(), @Model.ReleasedDate.ToString("MMMM dd, yyyy")</li>
    <li>Date Added : @Model.DateAdded.DayOfWeek.ToString(), @Model.DateAdded.ToString("MMMM dd, yyyy")</li>
    <li>Number In Stock : @Model.NumberInStock</li>
</ul>


